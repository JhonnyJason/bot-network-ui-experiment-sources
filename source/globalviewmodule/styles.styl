/*==========================================================
Visibility
==========================================================*/
.global-view
    #globalview-frame
        display block
// =========================================================

/*==========================================================
General Styles
==========================================================*/
#globalview-frame
    display none
    // background-color green
    color #000
    padding 10px

    h1
        text-align: center

    #total-evaluation-display
        color #fff
        background-color cd-antiflash
        display flex
        padding 20px 0
        font-size: 22pt
        flex-direction: row
        justify-content: center
        gap 5px
        border-radius: 3px

    #all-exchanges-display
        margin 60px 0

    .exchange-display-entry
        margin-bottom 50px
        
        .exchange-display-brand
            justify-content: flex-start

        .exchange-display-evaluation
            display flex
            gap 5px
            justify-content: flex-end
            align-items: center
            font-size 17pt
            padding-right 20px

        .exchange-access-indication
            color #fff
            text-align: center

            .access-preloader
                width: 27px
                height 27px
                // margin auto
                padding 5px

            .exchange-access-success
            .exchange-access-fail
                padding 10px
                border-radius: 3px
                display: none

            .exchange-access-success
                background-color cd-dark-green
            .exchange-access-fail
                background-color cd-danger-red


        .exchange-access-indication.access
            .access-preloader
                display none
            .exchange-access-success
                display block

        .exchange-access-indication.no-access
            .access-preloader
                display none
            .exchange-access-fail
                display block

// =========================================================

@media screen and (max-width: 500px)
    #globalview-frame
        .exchange-display-entry
            .exchange-display-brand
                justify-content: center

            .exchange-display-evaluation
                line-height 100%
                justify-content: center
                padding 0
                
            .access-preloader
                margin auto