
/*==========================================================
Visible State
==========================================================*/
.global-view
    #globalview-frame
        display block
// =========================================================

/*==========================================================
General Styles
==========================================================*/
#globalview-frame
    display none
    // background-color green
    color #000
    padding 10px

    h1
        text-align: center

    #total-evaluation-display
        color #fff
        background-color cd-antiflash
        display flex
        padding 20px 0
        font-size: 22pt
        flex-direction: row
        justify-content: center
        gap 5px
        border-radius: 3px

    #all-exchanges-display
        margin 60px 0

    .exchange-display-entry
        display: grid
        gap 20px
        grid-template-columns: 1fr 1fr
        margin-bottom 50px
        border-radius: 3px
        padding 10px
        background-color #000
        box-shadow: 0 0 3px alpha(cd-antiflash, 0.2)
        
        .exchange-display-brand
            color #fff
            display flex
            justify-content: flex-start
            align-content: center
            svg
                height 40px
                width 40px
                margin-right 10px
            .label
                font-size: 22pt
                line-height 40px

        .exchange-display-evaluation
            color #fff
            display flex
            gap 5px
            justify-content: flex-end
            font-size 17pt
            line-height 40px
            padding-right 20px


    .click-button
        text-align: center
        display flex
        align-content: center
        justify-content: center
        svg
            height 23px
            width 23px
            margin-right 5px

        .label
            line-height 23px

    // #add-exchange-button
    //     display flex
    //     flex-direction-row
// =========================================================

@media screen and (max-width: 500px)
    #globalview-frame 
        .exchange-display-entry
            grid-template-columns: 1fr

            .exchange-display-brand 
                justify-content: center

            .exchange-display-evaluation
                line-height 100%
                justify-content: center
                padding 0
