#backend-server-input
    width 100%
    padding 7px
    box-sizing: border-box
    border none
    overflow hidden
    text-overflow: ellipsis
    border solid 3px rgb(69, 212, 69)

#backend-server-input:focus
    width 100%
    background-color white

#backend-server-works-indicator
    color rgb(69, 212, 69)
    text-align left
    margin-top 10px
    margin-bottom 30px


#backend-server-button-container
    display: grid
    gap 30px
    grid-template-columns: 1fr 1fr
    margin-bottom: 40px
    
    .click-button
        background-color cd-flash
        font-weight bold
        min-width 80px
        padding 10px
        border-radius: 3px



#backend-server-explaination-text
    text-align: left