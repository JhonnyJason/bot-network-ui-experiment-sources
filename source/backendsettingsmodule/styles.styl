#backend-input-container
    max-width: max-content-width
    margin auto
    height 102px
    h2
        margin-bottom 7px
        text-align: left

#backend-checking-container 
    max-width: max-content-width
    height 150px
    margin 30px auto
    h2
        margin-bottom 7px
        text-align: left

#backend-stated-server-id 
    width 100%
    padding 16px 7px
    box-sizing: border-box
    border none
    overflow hidden
    text-overflow: ellipsis
    border-radius: 3px
    background-color: cd-antiflash

#backend-expected-server-id-input
#backend-server-input
    width 100%
    padding 7px
    box-sizing: border-box
    border none
    overflow hidden
    text-overflow: ellipsis
    border solid 3px #666

#backend-expected-server-id-input
    text-align: center
#backend-server-input:focus
    width 100%
    background-color white

#backend-id-differs-indicator
#backend-id-matches-indicator
#backend-connection-works-indicator
#backend-connection-fails-indicator
    display none
    text-align left
    margin-top 10px
    margin-bottom 30px

#backend-id-differs-indicator
#backend-connection-fails-indicator
    color cd-fail-red
#backend-id-matches-indicator
#backend-connection-works-indicator
    color cd-okay-green


#backend-input-container.connected
    #backend-server-input
        border solid 3px cd-okay-green
    #backend-connection-works-indicator
        display block

#backend-input-container.connection-fail
    #backend-server-input
        border solid 3px cd-fail-red
    #backend-connection-fails-indicator
        display block


#backend-input-container.typing
    #backend-server-input
        border solid 3px cd-warning-orange
    #backend-connection-works-indicator
    #backend-connection-fails-indicator
        display none

#backend-conclusion-row
    margin auto
    max-width: max-content-width
    margin-bottom 30px

#backend-server-explaination-text
    margin auto
    max-width: max-content-width
    text-align: left