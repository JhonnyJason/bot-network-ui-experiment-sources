/*==========================================================
Exchange Overview General Styles
==========================================================*/
#exchangeoverview-frame
    display none
    color #000

    h1
        text-align: center

    #controller-display
        margin 60px 0

    #exchange-evaluation-display
        display flex
        font-size: 22pt
        flex-direction: row
        justify-content: center
        gap 5px

    #exchange-display
        display flex
        svg
            height 50px
            width 50px
            margin-left 10px
        .label
            font-size 25pt
            line-height 50px


    .controller-display-entry
        display: grid
        gap 20px
        grid-template-columns: 1fr 1fr
        margin-bottom 50px
        border-radius: 3px
        padding 10px
        box-shadow: 0 0 3px alpha(#000, 0.1)
        
        .controller-display-label
            font-size: 22pt
            line-height 40px

        .exchange-display-evaluation
            display flex
            gap 5px
            justify-content: flex-end
            font-size 17pt
            line-height 40px
            padding-right 20px



    .click-button
        text-align: center
        display flex
        align-content: center
        justify-content: center
        svg
            height 23px
            width 23px
            margin-right 5px

        .label
            line-height 23px
//=========================================================

