/*==========================================================
Apppreloader
==========================================================*/
#apppreloader
    width: 120px
    max-width: 30%
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%,-50%)
    color #000

#apppreloader
    .preloader
        height: auto
        width: 100%
        aspect-ratio: 1
