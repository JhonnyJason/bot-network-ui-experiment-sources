// content styles
#tutorialframe
    display none
    color black
    padding 30px

    h1
        margin-bottom 20px
    p
        margin-bottom 10px

    p.wish-paragraph
        font-size: 25pt
        transform rotate(-5deg)
        margin-top 40px
        margin-left auto
        margin-right 0
        width: fit-content

    .click-button
        margin-bottom 40px
        margin-top 20px
        text-align: center
        width fit-content

    #sample-settings-icon
        height 15px
        width 15px

#content.no-key
    #tutorialframe
        display block

#content
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 20px 0
    box-sizing: border-box
    transition: opacity 0.3s
    overflow: hidden
    overflow-y: auto

#content
    text-align left

    .click-button
        padding 7px 10px
        // display block
        min-width 180px
        background-color cd-flash
        color white
        font-weight bold
        border-radius: 3px
    input
        display block
        color black
        margin-left auto
        margin-right auto
        box-sizing: border-box
        overflow: hidden
        text-overflow: ellipsis
        border solid 1px #808080
        width calc(100% - 30px)

