/*==========================================================
UI-State dependent styles
==========================================================*/
.tutorial
.locked
.global-view
.exchange-overview
.add-exchange
.controller-overview
.add-controller
    #apppreloader
        display none

/*==========================================================
Main Content Styles
==========================================================*/
#content
    position absolute
    top 0
    left 50%
    width 100%
    max-width max-content-width
    height 100%
    padding 20px 0
    box-sizing: border-box
    transform: translateX(-50%)
    transition: opacity 0.3s
    overflow: hidden
    overflow-y: auto


