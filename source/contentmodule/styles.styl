/*==========================================================
UI-State dependent styles
==========================================================*/
.tutorial
.locked
.global-view
.exchange-overview
.add-exchange
.controller-overview
.add-controller
    #apppreloader
        display none

/*==========================================================
Main Content Styles
==========================================================*/
#content
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 20px 0
    box-sizing: border-box
    transition: opacity 0.3s
    overflow: hidden
    overflow-y: auto

#content
    text-align left

    .click-button
        padding 7px 10px
        // display block
        min-width 180px
        background-color cd-flash
        color white
        font-weight bold
        border-radius: 3px
    input
        display block
        color black
        margin-left auto
        margin-right auto
        box-sizing: border-box
        overflow: hidden
        text-overflow: ellipsis
        border solid 1px #808080
        width calc(100% - 30px)



/*==========================================================
Apppreloader
==========================================================*/
#apppreloader
    width: 200px
    max-width: 30%
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%,-50%)
    color #000

#apppreloader
    .preloader
        height: auto
        width: 100%
        aspect-ratio: 1
