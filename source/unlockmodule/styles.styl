element-background ?= #000
element-foreground ?= #fff

#phraseunlock-frame
    position absolute
    top 0
    left 0
    z-index:  299
    height 100%
    width 100%
    overflow hidden
    background-color element-background
    color element-foreground
    display flex
    align-items: center
    transform translateY(-102%)
    opacity 0
    transition: opacity 0.3s
    pointer-events: none

    .click-catcher
        position absolute
        top 0
        left 0
        height 100%
        width 100%
        overflow hidden

    #phraseunlock-close-button
        position: fixed
        top 0
        right 0
        width 60px
        height 60px
        padding 15px
        box-sizing: border-box
        color #000
        svg
            width: 30px
            height 30px

    .phraseunlock-container
        position absolute
        top 0
        left 50%
        margin-top 100px
        width 100%
        max-width: max-content-width
        padding 10px
        box-sizing: border-box
        transform: translateX(-50%)
        
        input
            margin-top 16px
            margin-bottom 30px

#phraseunlock-frame.active
    transform translateY(0)
    opacity 1
    pointer-events: all

