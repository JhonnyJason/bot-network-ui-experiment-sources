// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
// cd-foreground = #4AF626
cd-foreground = #feffff
// cd-flash = #4AF626
cd-flash = #c3a500
cd-antiflash = #024
cd-background = #070202
cd-okay-green = rgb(69, 212, 69)
cd-warning-orange = orange
cd-fail-red = rgb(212, 69, 69)

cd-danger-red = #600
cd-dark-green = #060


settings-foreground = cd-foreground
settings-background = cd-background

content-foreground = cd-background
content-background = cd-foreground

element-background = #fff
element-foreground = #000


/*==========================================================
Global Variables
==========================================================*/
max-content-width = 1024px
// mobile-side-padding = 15px

/*==========================================================
General Tag Styles
==========================================================*/
html
    height 100%

body
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    height 100%
    width 100%
    overflow hidden
    // background-image: url('/img/annie-spratt-0ZPSX_mQ3xI-unsplash.jpg') // bright fluid painting
    // background-image: url('/img/annie-spratt-osuiatBDTww-unsplash.jpg') // dark marble
    // background-image: url('/img/annie-spratt-yI3weKNBRTc-unsplash.jpg') // bright wall pattern
    // background-image: url('/img/bruno-ramos-lara-sz3AWACktLc-unsplash.jpg') // slight blue and gold-brown
    // background-image: url('/img/david-jorre-9f1gCaLkZBU-unsplash.jpg') // white abstract pattern
    // background-image: url('/img/jean-philippe-delberghe-75xPHEQBmvA-unsplash.jpg') // white abstract pattern
    // background-image: url('/img/madison-bracaglia-fcWAwPKpkTU-unsplash.jpg') // bright marble
    // background-image: url('/img/morgane-le-breton-h6Sx0A8osho-unsplash.jpg') // mountain snow blue sky
    // background-image: url('/img/orfeas-green-G5A5ZNjS2tE-unsplash.jpg') // funky pattern blue bright brown colors
    // background-image: url('/img/ricardo-gomez-angel-9AdeEdYB2yk-unsplash.jpg') // abstract white, dark shield pattern
    background-size: cover
    background-position: center
    background-repeat: no-repeat

h1
    font-size: 19pt
h2
    font-size: 15pt
p
    font-size: 12pt

p.sideline
    font-size: 9pt

select,
option,
input
    width 100%
    box-sizing: border-box
    font-size: 14pt


/*==========================================================
General Class Styles
==========================================================*/
.hidden-templates
    display none

.disabled
    opacity 0.2
    pointer-events: none

/*==========================================================
Icons n Label
==========================================================*/

.icon-n-label
.icon-n-label-big
    display flex
    flex-direction: row
    align-items: center
    justify-content: center

.icon-n-label
    svg
        width 20px
        height 20px
        margin 0 5px

.icon-n-label-big
    svg
        width 40px
        height 40px
        margin 0 10px
    .label
        font-size: 22pt

/*==========================================================
Buttons
==========================================================*/
.danger-button
.flashy-button
    padding 7px 10px
    color white
    font-weight bold
    border-radius: 3px

.flashy-button
    background-color cd-flash
.danger-button
    background-color cd-danger-red

/*==========================================================
Form Elements
==========================================================*/
.dark-select
    border-radius: 3px
    background-color: cd-antiflash 
    color #fff

.dark-input
    background-color #024
    color #fff
    text-align: center
    padding 16px 20px
    border-radius: 3px

/*==========================================================
Grid Boxes
==========================================================*/
.button-box
.entry-box
    display grid
    gap 20px
    grid-template-columns: 1fr 1fr

.entry-box
    padding 10px
    border-radius: 3px
    background-color #000
    color #fff
    box-shadow: 0 0 5px alpha(#024, 0.3)
    margin-bottom 40px


@media screen and (max-width: 400px)
    .button-box
    .entry-box
        grid-template-columns: 1fr
    